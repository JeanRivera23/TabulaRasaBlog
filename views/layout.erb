    <meta charset="utf-8">
    <link rel="stylesheet" href="main.css">
    <title>Tabula Rasa</title>
  </head>
  <body>
    <nav>
      <% if session[:user_id] %>
        <a href="/sign-out">Sign Out</a>
      <% else %>
