<div class="content">
  <nav>
    <ul>
      <li><a href="/profile">profile</a></li>
    </ul>
  </nav>

  <div id="comment">

  <h3>Create Post</h3>

  <form action="/feed" method="post">

    <label for="">Title</label>
    <input type="text" name="[post]title">

    <label for="">Content</label>
    <input type="text" name="[post]content" maxlength="150">

    <button type="submit">submit</button>

  </form>


  </div>

  <div class="feedDisplay">

    <h1>Feed</h1>

    <% @posts.reverse[0...10].each do |post| %>

      <div class="postDisplay">

        <h3> <%= post.user.fname.capitalize %>
        <%= post.user.lname.capitalize %></h3>

        <%= post.title.capitalize %>
        <%= post.content %>
        <a href="/visit_profile/<%= post.user_id %>">visit profile</a>

      </div>

    <% end %>

  </div>

</div>
