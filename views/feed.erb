<div class="content">
  <nav>
    <ul>
      <li><a href="/profile">profile</a></li>
    </ul>
  </nav>

  <div id="comment">

    <h3>Create Post</h3>

    <form action="/feed" method="post">

      <label for="">Title</label>
      <input type="text" name="[post]title">

      <label for="">Content</label>
      <input type="text" name="[post]content" maxlength="150">

      <button class="btn" type="submit">Submit</button>

    </form>

  </div>


  <div class="feedDisplay">

    <h1>Feed</h1>

    <% @posts.reverse[0...10].each do |post| %>

      <div class="postDisplay">

        <h3> <%= post.user.fname.capitalize %>
        <%= post.user.lname.capitalize %></h3>

        <p id="pFeed"> <%= post.title.capitalize %>: <%= post.content %> <span> <a href="/visit_profile/<%= post.user_id %>">visit profile</a></span></p>


      </div>

    <% end %>

  </div>

</div>
